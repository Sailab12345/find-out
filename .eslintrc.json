{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "react-app"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "process": true,
    "require": true
  },
  "plugins": ["react"],
  "rules": {
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["warn", "double"],
    "semi": ["warn", "always"],
    "no-console": "warn",
    "no-debugger": "warn",
    "react/prop-types": "warn",
    "no-undef": "warn",
    "no-unused-vars": "warn",
    "react/display-name": "off",
    "react-hooks/exhaustive-deps": "warn",
    "no-useless-catch": "warn",
    "array-bracket-spacing": [
      "warn",
      "always",
      {
        "singleValue": false
      }
    ],
    "comma-dangle": ["warn", "never"]
  }
}
